{
    "name": "test/test",
    "description": "CI included ",
    "type": "project",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "php": ">=7.1",
        "cweagans/composer-patches": "^1.6",
        "drupal/core": "^8.8.0",
        "drupal/drupal-extension": "^4.0",
        "drush/drush": "^10.2",
        "mglaman/drupal-check": "^1.0",
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "^3.0.1",
        "su-sws/stanford-caravan": "dev-8.x-1.x"
    },
    "require-dev": {
        "pcov/clobber": "^2.0",
        "drupal/core-dev": "^8.8",
        "phpstan/phpstan": "0.12.42"
    },
    "config": {
        "php": "7",
        "sort-packages": true,
        "discard-changes": true
    },
    "extra": {
        "patches": {
            "mglaman/drupal-check": {
                "Invalid error for yaml plugin managers https://github.com/mglaman/phpstan-drupal/issues/142": "patches/drupal-check_yaml-plugin.patch"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "drush/Commands/{$name}": [
                "type:drupal-drush"
            ]
        },
        "custom-installer": {
            "web/libraries/{$name}/": [
                "type:component",
                "ckeditor/ckeditor",
                "enyo/dropzone",
                "components/jquery"
            ],
            "vendor/{$vendor}/{$name}/": [
                "type:library"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ]
        }
    }
}
